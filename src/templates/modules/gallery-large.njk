<div class="row">
	<div class="col-sm-12">
		<div class="gallery-large">
			<div class="gallery-top">
				<!-- BEGIN GALLERY IMAGES -->
				<div class="swiper-container gallery-images">
					<div class="swiper-wrapper">
						{% for slide in module.slides %}
						<div class="swiper-slide">
							<div class="swiper-image" style="background-image:url({{ slide.image }})"></div>
						</div>
						{% endfor %}
					</div>
				</div>
				<!-- END GALLERY IMAGES -->
			</div>
			<div class="row gallery-bottom">
				<div class="col-sm-10 offset-sm-1">
					<div class="card">
						<div class="card-header">
							<!-- BEGIN GALLERY CONTROLS -->
							<div class="row align-items-center">
								<div class="col-lg-8 col-md-7 col-sm-8">
									<span>{{ module.title }}</span>
								</div>
								<div class="col-lg-4 col-md-5 col-sm-4">
									<div class="row align-items-center">
										<div class="col-md-6 col-sm-12 col-6 text-sm-right"> 
											<div class="swiper-pagination"></div>
										</div>
										<div class="col-md-6 col-sm-12 col-6 text-right"> 
											<div class="swiper-button-prev">
												<svg class="arrow arrow-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 22">
													<use class="arrow-img" xlink:href="#arrow"/>
												</svg>
											</div>
											<div class="swiper-button-next">
												<svg class="arrow arrow-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 22">
													<use class="arrow-img" xlink:href="#arrow"/>
												</svg>
											</div>
										</div>
									</div>
								</div>
							</div>
							<!-- END GALLERY CONTROLS -->
						</div>
						<div class="card-block">
							<!-- BEGIN GALLERY CARDS -->
							<div class="swiper-container gallery-cards">
								<div class="swiper-wrapper">
		 							{% for slide in module.slides %}
									<div class="swiper-slide">
										<h3 class="card-title" data-swiper-parallax="-300"><a href="#">{{ slide.heading }}</a></h3>
										<p data-swiper-parallax="-100">{{ slide.body }}</p>
										<div class="text-right" data-swiper-parallax="-200">
											<a href="#" class="btn btn-outline-primary">{{ slide.button }}</a>
										</div>
									</div>
									{% endfor %}
								</div>
							</div>
							<!-- END GALLERY CARDS -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>